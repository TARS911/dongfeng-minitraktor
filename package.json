  "devDependencies": {
    "chalk": "^5.3.0",
    "chokidar-cli": "^3.0.0",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.49",
