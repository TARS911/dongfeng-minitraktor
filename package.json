{
  "name": "dongfeng-design-system",
  "version": "1.0.0",
  "description": "DONGFENG миnitractors e-commerce website with Figma design system integration",
  "type": "module",
  "private": true,
  "scripts": {
    "figma:setup": "node scripts/figma/setup-wizard.js",
    "figma:test": "node scripts/figma/test-connection.js",
    "figma:pull": "node scripts/figma/figma-to-css.js",
    "figma:push": "node scripts/figma/css-to-figma.js",
    "figma:sync": "node scripts/figma/sync-tokens.js",
